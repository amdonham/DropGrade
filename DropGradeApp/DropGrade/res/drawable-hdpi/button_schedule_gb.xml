<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#7e0000" />
            <stroke
                android:width="1dp"
                android:color="#3D1308" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#7e0000"
                android:endColor="#3D1308"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3D1308" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>